using System;
using System.Reflection.Metadata;

namespace HagiLeon
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int heatPointdpLeon = 100, heatPointHagi = 100;
            string userchoice;
            int chanceOfDamage;

            Console.WriteLine("Добро пожаловать на битву Хаги Ваги и Леона!");

            while (heatPointdpLeon > 0 && heatPointHagi > 0)
            {
                Console.WriteLine($"Здоровье Леона: {heatPointdpLeon}%       Здоровье Хаги Ваги: {heatPointHagi}%");
                Console.WriteLine("\nХод Хаги Ваги!\nВыберите зону удара\n1.Голова(шанс 20%)\n2.Туловище(шанс 30%)\n3.Ноги(шанс 40%)");
                userchoice = Console.ReadLine();

                switch (userchoice)
                {
                    case "1":
                        chanceOfDamage = random.Next(1, 6);

                        if (chanceOfDamage <= 2)
                        {
                            Console.WriteLine("Вы попали и нанесли 25% урона!");
                            heatPointdpLeon -= 25;
                        }
                        else
                        {
                            Console.WriteLine("Промах!");
                        }
                        break;
                    case "2":
                        chanceOfDamage = random.Next(1, 6);

                        if (chanceOfDamage <= 3)
                        {
                            Console.WriteLine("Вы попали и нанесли 15% урона!");
                            heatPointdpLeon -= 15;
                        }
                        else
                        {
                            Console.WriteLine("Промах!");
                        }
                        break;
                    case "3":
                        chanceOfDamage = random.Next(1, 6);

                        if (chanceOfDamage <= 4)
                        {
                            Console.WriteLine("Вы попали и нанесли 10% урона!");
                            heatPointdpLeon -= 10;
                        }
                        else
                        {
                            Console.WriteLine("Промах!");
                        }
                        break;
                    default:
                        Console.WriteLine("\nХаги Ваги засмотрелся на Кисси Миси и пропустил свой ход... Любовь зла :(");
                        break;
                }

                if (heatPointdpLeon <= 0)
                {
                    break;
                }

                Console.WriteLine($"Здоровье Леона: {heatPointdpLeon}%       Здоровье Хаги Ваги: {heatPointHagi}%");
                Console.WriteLine("\nХод Леона!\nВыберите зону удара\n1.Голова(шанс 20%)\n2.Туловище(шанс 30%)\n3.Ноги(шанс 40%)");
                userchoice = Console.ReadLine();

                switch (userchoice)
                {
                    case "1":
                        chanceOfDamage = random.Next(1, 6);

                        if (chanceOfDamage <= 2)
                        {
                            Console.WriteLine("Вы попали и нанесли 25% урона!");
                            heatPointHagi -= 25;
                        }
                        else
                        {
                            Console.WriteLine("Промах!");
                        }
                        break;
                    case "2":
                        chanceOfDamage = random.Next(1, 6);

                        if (chanceOfDamage <= 3)
                        {
                            Console.WriteLine("Вы попали и нанесли 15% урона!");
                            heatPointHagi -= 15;
                        }
                        else
                        {
                            Console.WriteLine("Промах!");
                        }
                        break;
                    case "3":
                        chanceOfDamage = random.Next(1, 6);

                        if (chanceOfDamage <= 4)
                        {
                            Console.WriteLine("Вы попали и нанесли 10% урона!");
                            heatPointHagi -= 10;
                        }
                        else
                        {
                            Console.WriteLine("Промах!");
                        }
                        break;
                    default:
                        Console.WriteLine("\nАх, Леончик... К сожалению Шелли принадлежит Кольту, а твой ход переход Хаги Ваги:(");
                        break;
                }

                Console.WriteLine("Для продолжения нажмите Enter");
                Console.ReadKey();
                Console.Clear();
            }

            Console.WriteLine($"Бой окончен! Здоровье Леона: {heatPointdpLeon}       Здоровье Хаги: {heatPointHagi}");

            if (heatPointHagi <= 0)
            {
                Console.WriteLine("Победа за Леоном!");
            }
            else
            {
                Console.WriteLine("Победа за Хаги Ваги");
            }
            Console.Read();
        }
    }
}
